              crossAxisAlignment: CrossAxisAlignment.start,
              children: [
                Text(
                  'VENDAS GLOBAIS - 4 MOEDAS',
                  style: TextStyle(
                    color: Colors.amber,
                    fontSize: 16,
                    fontWeight: FontWeight.bold,
                  ),
                ),
                SizedBox(height: 15),
